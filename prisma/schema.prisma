generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          Int             @id @default(autoincrement())
  title       String
  content     String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  isPublished Boolean         @default(true)
  images      BlogPostImage[]
}

model Settings {
  id        Int    @id @default(autoincrement())
  siteName  String
  copyright String
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  password String
}

model BlogPostImage {
  id              Int      @id @default(autoincrement())
  post            BlogPost @relation(fields: [postId], references: [id])
  postId          Int
  originalWidth   Int
  originalHeight  Int
  originalName    String
  originalType    String
  thumbnailWidth  Int
  thumbnailHeight Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
